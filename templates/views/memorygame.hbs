<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  {{>header}}
  <link rel="stylesheet" href="./css/memorygame.css" type="text/css" />
</head>

<body>
  <div id="app">
    <div class="overlay displayNone">
      <div class="resultMessageContainer">
        <span id="resultMessage"></span>
      </div>
      <div class="overlay-container">
        <div class="button-container">
          <div class="button-box">
            <span>Refresh </span>
            <button class="icon overlay-button" id="refresh-container">
              <i class="material-icons  img-icon" title="refresh">
                refresh
              </i>
            </button>
          </div>
          <div class="button-box">
            <span>Restore </span>
            <button class="icon overlay-button" id="restore-container">
              <i class="material-icons img-icon" title="restore">
                restore
              </i>
            </button>
          </div>
        </div>
      </div>
      <div class="information-container">
        <div class="more-button">
          <button id="more-info">More info</button>
        </div>
        <div class="information-list-container">
          <div>
            <ul class="information-list displayNone"></ul>
          </div>
        </div>
      </div>
    </div>
    <div id="main-app">
      <div style="display: flex;font-size:1.5rem">
        <div style="display:inline-flex">
          <button id="close" style="background-color: rgba(0,0,0,0);color:white;border:none;outline:none;">
            <a href="{{homepage_url}}" style="color:white;text-decoration: none;">
              <span class="material-icons">
                close
              </span>
            </a>
          </button>
        </div>
        <div style="display:flex;flex:1;justify-content:center;margin-bottom:12px;">
          <span>Memory game</span>
        </div>
      </div>

      <div class="box">
        <div class="results">
          <div class="scoreboard">
            <div class="score-circle score">
              <span id="result"></span>
            </div>
            <h3>
              Score
            </h3>
          </div>
          <div class=" scoreboard">
            <div class="score-circle  remaining-score">
              <span id="remaining"></span>
            </div>
            <h3>
              Remaining
            </h3>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="grid">
        </div>
      </div>
    </div>
  </div>
</body>
<script src="/js/memorygame.js"></script>

</html>